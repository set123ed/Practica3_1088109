<?xml version="1.0" encoding="UTF-8"?>
<ContentPage   xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tarea3.Views.RegisterPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
              ios:Page.UseSafeArea="true">
        <ScrollView>
    <StackLayout VerticalOptions="Center">
        <Image Source="intec" VerticalOptions="Center" HorizontalOptions="Center" />
         <Entry Placeholder="Name" Text="{Binding NameEntry}" VerticalOptions="Center"/>
        <Entry Placeholder="Email" Text="{Binding EmailEntry}" VerticalOptions="Center"/>
        <Entry Placeholder="Password" Text="{Binding PasswordEntry}" VerticalOptions="Center" IsPassword="True" />
         <Entry Placeholder="Confirm Password" Text="{Binding PasswordConfirmEntry}" VerticalOptions="Center" IsPassword="True"/>
        <Button Text="Sign Up" TextColor="White" BackgroundColor="Red" HorizontalOptions="FillAndExpand" Command="{Binding SignUpCommand}"/>
    </StackLayout>
        </ScrollView>
</ContentPage>
